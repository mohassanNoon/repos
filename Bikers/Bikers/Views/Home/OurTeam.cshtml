@model IEnumerable<Bikers.Models.TeamMembers>

@{
    ViewBag.Title = "OurTeam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<section id="team">
    <div class="container">
        <div class="row">
            <div class="title">
                <h2>CREATIVE TEAM</h2>
                <p>"Coming together is a beginning. Keeping together is progress.  <br> Working together is success." --Henry Ford</p>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-4 col-xs-6">

                    <div class="block wow fadeInLeft" data-wow-delay=".3s">
                        <img src="~/Content/images/TeamMembers/@item.Image" alt="">
                        <div class="team-overlay">
                            <h3>@item.Name<span>@item.Designation</span></h3>
                            <h4>Phone Number<span>@item.PhoneNumber</span></h4>

                            <span class="icon"><i class="ion-quote"></i></span>
                            <p>@item.Description</p>
                        </div>
                    </div>

                </div>
            }
