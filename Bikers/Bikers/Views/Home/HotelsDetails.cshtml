@using Bikers.Helpers
@model Bikers.Models.Hotels


@{
    ViewBag.Title = "HotelsDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles
{
    <style>
        #divdesc p {
            margin: 0px;
            -webkit-margin-before: 1em;
            -webkit-margin-after: 1em;
            -webkit-margin-start: 0px;
            -webkit-margin-end: 0px;
            -moz-margin-before: 1em;
            -moz-margin-after: 1em;
            -moz-margin-start: 0px;
            -moz-margin-end: 0px;
        }
    </style>
}
@{

    List<String> list = Model.Image.Split(',').ToList<String>();
    var index = 0;
    var s = 0;
    var x = 0;
}

@if (Model != null)
{



    if (list.Count != 0)
    {
        <div class="container">

            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    @foreach (var i in list)
                    {
                        if (s == 0)
                        {
                            <li data-target="#myCarousel" data-slide-to="@x" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#myCarousel" data-slide-to="@x"></li>
                        }
                        s = 1;
                        x++;
                    }

                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    @if (list.Count != 0)
                    {
                        foreach (var img in list)
                        {
                            if (index == 0)
                            {
                                <div class="item active">
                                    <img src="~/Content/Images/HotelsImg/@img" style="width: 100%; height: 550px">
                                </div>
                            }
                            else
                            {

                                <div class="item">
                                    <img src="~/Content/Images/HotelsImg/@img" style="width: 100%; height: 550px">
                                </div>
                            }
                            index = 1;
                        }
                    }
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    }

    <section id="blog-left">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-lg-offset-2">
                    <div class="block">
                        <span class="first-child-span text-center"><h1>@Model.Name</h1></span>
                        <h5 style="text-align:center">Posted: @Html.ShowDate(Model.CreatedOn)</h5>

                        <p class="first-child">@Html.Raw(Model.Description)</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

}
else
{
    <h2>No Data Available</h2>
}

@section scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script>
        $("#divdesc ul").css({ "list-style-type": "initial", "padding-left": "5%" });
        $('#divdesc ul').removeAttr('padding');
    </script>
}